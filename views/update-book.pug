extends layout

block content
  h1 Update Book

  form(action="/books/" + book.id, method="post" onsubmit="return confirm('Do you realy want to update the book?')")
    include form
    input(type="submit" value='Update Book')

  form(action="/books/" + book.id + '/delete', method="post" onsubmit="return confirm('Do you really want to delete this book?') ")
    p
      input(type="submit" value="Delete Book")

    p
      a.button(href="/books") Return Home
